{% extends 'base.html.twig' %}

{% block title %}Portfolio - Julia LEGRAND{% endblock %}

{% block header %}
    <header>
        <nav class="navbar navbar-expand-md navbar-dark">
            <div class="ml-auto">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#monMenu" aria-controls="monMenu" aria-expanded="false" aria-label="Menu pour mobile">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="monMenu">
                    <div class="navbar-nav">
                        <a class="nav-item nav-link" href="#about">A propos</a>
                        <a class="nav-item nav-link" href="#skills">Domaines d'expertise</a>
                        <a class="nav-item nav-link" href="#projects">Réalisations</a>
                        <a class="nav-item nav-link" href="#career">Parcours</a>
                        <a class="nav-item nav-link" href="#contact">Contact</a>
                    </div>
                </div>
            </div>
        </nav>
        <section id="presentation-section">
            {% for presentation in presentations %}
                <h1>Julia</h1>
                <h1>{{ presentation.title }}</h1>
            {% endfor %}
        </section>
    </header>
{% endblock %}

{% block body %}

    <!--A propos-->

    <section id="about-section">
        {% for about in abouts %}
            <div class="aboutText">
                <h2>A propos</h2>
                <p>{{ about.aboutText }}</p>
            </div>
            <div class="aboutPicture">
                <img src="{{ asset('uploads/images/' ~ about.aboutPicture) }}" alt="photo">
            </div>
        {% endfor %}
    </section>

    <!--Domaines d'expertise-->

    <section id="skills-section">
        <h2>Domaines d'expertise</h2>
            <div class="skillBlocs">
                {% for skill in skills %}
                    <div class="skillBloc">
                        <img src="{{ asset('uploads/images/' ~ skill.skillPicture) }}" alt="logo compétences">
                        <h3>{{ skill.skillTitle }}</h3>
                        <p>{{ skill.skillText }}</p>
                        <p><strong>{{ skill.skillList }}</strong></p>
                    </div>
                {% endfor %}
            </div>
    </section>

    <!--Réalisations-->

    <section id="projects-section">
        <h2>Réalisations</h2>
        <div class="projectBlocs">
            {% for project in projects %}
                <div class="projectBloc">
                    <img src="{{ asset('uploads/images/' ~ project.projectPicture) }}" alt="impression écran projet">
                    <h3>{{ project.projectTitle }}</h3>
                    <p>{{ project.projectText }}</p>
                    {% for skill in project.skills %}
                        <span class="skillsList">{{ skill.skillList }}</span>
                    {% endfor %}
                </div>
            {% endfor %}
        </div>
    </section>

    <!--Parcours-->

    <section id="career-section">
        <h2>Parcours</h2>
        <div class="timeline">
            {% for career in careers %}
                <article class="career-article">
                    <h4>{{ career.careerTitle }}</h4>
                    <ul>
                        <li>{{ career.careerCompany }}</li>
                        <li>{{ career.careerCity }}</li>
                        <li>{{ career.startDate }} - {{ career.endDate }}</li>
                    </ul>
                </article>
            {% endfor %}
        </div> 
    </section>

    <!--Télécharger le CV-->

    <section id="cv-section">
        <div class="cv">
            <div class="cv-link">
                {% for presentation in presentations %}
                    <a href="{{ asset('uploads/images/' ~ presentation.cv) }}" download>Télécharger mon CV</a>
                {% endfor %}
            </div>
        </div>
    </section>

    <!--Contact-->

    <section id="contact-section">
        <h2>Contact</h2>
        {{ include('contact/_form.html.twig') }}
    </section>
{% endblock %}

{% block footer %}
<footer>
    {% for presentation in presentations %}
		<div class="legals1">
			<p>Julia LEGRAND | 2023 | Tous droits réservés.</p>
		</div>
		<div class="socials">
			<a href="https://{{ presentation.githubLink }}" target="_blank"><i class="fa-brands fa-github"></i></a>
			<a href="https://{{ presentation.linkedinLink }}" target="_blank"><i class="fa-brands fa-linkedin"></i></a>
		</div>
        <div class="legals2">
			<small><a href="/politique-de-confidentialite" target="_blank">Politique de confidentialité</a> | <a href="/mentions-legales" target="_blank">Mentions légales</a></small>
		</div>
	{% endfor %}
</footer>
{% endblock %}
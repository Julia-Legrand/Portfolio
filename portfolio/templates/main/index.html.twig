{% extends 'base.html.twig' %}

{% block title %}Portfolio - Julia LEGRAND{% endblock %}

{% block header %}
    <header>
        <nav class="navbar navbar-expand-md navbar-dark">
            <div class="ml-auto">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#monMenu" aria-controls="monMenu" aria-expanded="false" aria-label="Menu pour mobile">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="monMenu">
                    <div class="navbar-nav">
                        <a class="nav-item nav-link" href="#about">A propos</a>
                        <a class="nav-item nav-link" href="#skills">Domaines d'expertise</a>
                        <a class="nav-item nav-link" href="#projects">Réalisations</a>
                        <a class="nav-item nav-link" href="#career">Parcours</a>
                        <a class="nav-item nav-link" href="#contact">Contact</a>
                    </div>
                </div>
            </div>
        </nav>
        <section id="presentation">
            {% for presentation in presentations %}
                <h1>Julia</h1>
                <h1>{{ presentation.title }}</h1>
            {% endfor %}
        </section>
    </header>
{% endblock %}

{% block body %}

<!--------------------A propos-------------------->

    <section id="about">
        {% for about in abouts %}
            <div class="aboutText">
                <h2>A propos</h2>
                <p>{{ about.aboutText }}</p>
            </div>
            <div class="aboutPicture">
                <img src="{{ asset('uploads/images/' ~ about.aboutPicture) }}">
            </div>
        {% endfor %}
    </section>

<!--------------------Domaines d'expertise-------------------->

    <section id="skills">
        <h2>Domaines d'expertise</h2>
            <div class="skillBlocs">
                {% for skill in skills %}
                    <div class="skillBloc">
                        <img src="{{ asset('uploads/images/' ~ skill.skillPicture) }}">
                        <h3>{{ skill.skillTitle }}</h3>
                        <p>{{ skill.skillText }}</p>
                        <p><strong>{{ skill.skillList }}</strong></p>
                    </div>
                {% endfor %}
            </div>
    </section>

<!--------------------Réalisations-------------------->

    <section id="projects">
        <h2>Réalisations</h2>
        <div class="projectBlocs">
            {% for project in projects %}
                <div class="projectBloc">
                    <img src="{{ asset('uploads/images/' ~ project.projectPicture) }}">
                    <h3>{{ project.projectTitle }}</h3>
                    <p>{{ project.projectText }}</p>
                    {% for skill in project.skills %}
                        <span>{{ skill.skillTitle }}</span>
                    {% endfor %}
                </div>
            {% endfor %}
        </div>
    </section>

<!--------------------Parcours-------------------->

    <section id="career">
        <h2>Parcours</h2>
        <div class="timeline">
            {% for career in careers %}
                <article>
                    <p><strong>{{ career.careerTitle }}</strong></p>
                    <ul>
                        <li>{{ career.careerCompany }}</li>
                        <li>{{ career.careerCity }}</li>
                        <li>{{ career.startDate }} - {{ career.endDate }}</li>
                    </ul>
                </article>
            {% endfor %}
        </div> 
    </section>

<!--------------------Télécharger le CV-------------------->

    <section id="cv">
        <div class="cv">
            <div class="cv-link">
                <a href="" download>Télécharger mon CV</a>
            </div>
        </div>
    </section>

<!--------------------Contact-------------------->

    <section id="contact">
        <h2>Contactez-moi</h2>
        <!-- Formulaire de contact -->
    </section>
{% endblock %}

{% block footer %}
    {% for presentation in presentations %}
		<div class="legals">
			<p>Julia LEGRAND © | 2023 | Tous droits réservés.</p>
		</div>
		<div class="socials">
			<a href="{{ presentation.githubLink }}"><i class="fa-brands fa-github"></i></a>
			<a href="{{ presentation.linkedinLink }}"><i class="fa-brands fa-linkedin"></i></a>
		</div>
	{% endfor %}
{% endblock %}
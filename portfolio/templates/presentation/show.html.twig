{% extends 'baseIndex.html.twig' %}

{% block title %}Presentation{% endblock %}

{% block body %}
    <h1>Presentation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ presentation.id }}</td>
            </tr>
            <tr>
                <th>Wallpaper</th>
                <td><img src="{{ asset('uploads/images/' ~ presentation.wallpaper) }}"></td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ presentation.title }}</td>
            </tr>
            <tr>
                <th>CV</th>
                <td><img src="{{ asset('uploads/images/' ~ presentation.cv) }}"></td>
            </tr>
            <tr>
                <th>GithubLink</th>
                <td>{{ presentation.githubLink }}</td>
            </tr>
            <tr>
                <th>LinkedinLink</th>
                <td>{{ presentation.linkedinLink }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_presentation_index') }}">back to list</a>

    <a href="{{ path('app_presentation_edit', {'id': presentation.id}) }}">edit</a>

    {{ include('presentation/_delete_form.html.twig') }}
{% endblock %}
